<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Click the buttons to view saved data!" />

    <Space
        android:layout_width="1dp"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/privateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW PRIVATE DATA"
        android:onClick="privateShowMethod"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/publicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW PUBLIC DATA"
        android:onClick="publicShowMethod"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:onClick="backMethod"/>
</LinearLayout>